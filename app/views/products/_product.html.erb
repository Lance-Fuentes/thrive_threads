<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= product.category_id %>
  </p>

  <p>
    <strong>Image:</strong>
    <% if product.images.attached? %>
      <%= image_tag rails_blob_path(product.images.first) %>
    <% else %>
      No image available
    <% end %>
  </p>

</div>
